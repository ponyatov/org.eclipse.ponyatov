<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.ponyatov.Perspective"
            icon="icons/alt_window_16.gif"
            id="org.eclipse.ponyatov.perspective"
            name="Ponyatov">
      </perspective>
   </extension>
   
   <extension
   		point="org.eclipse.core.resources.natures"
   		id="org.eclipse.ponyatov.makeproject"
   		name="Ponyatov's Makefile project"
   		>
   		<runtime>
   			<run class="org.eclipse.ponyatov.MakeNature"/>
   		</runtime>
   		<builder id="org.eclipse.ponyatov.make"/> 
   </extension>
   
   <extension
   		point="org.eclipse.core.resources.builders"
   		id="org.eclipse.ponyatov.make"
   		name="MAKE"
   		>
   		<builder hasNature="true">
   			<run class="org.eclipse.ponyatov.MakeBuilder"/>
   		</builder>
   </extension>

</plugin>
